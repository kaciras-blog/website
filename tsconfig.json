{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"moduleResolution": "Node",

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},

		"types": [
			"jest",
			"webpack-env"
		],

		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,

		"jsx": "preserve",
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}
