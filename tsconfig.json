{
	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
	},
}
