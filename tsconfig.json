{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"useUnknownInCatchVariables": false,
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"allowArbitraryExtensions": true,
		"allowSyntheticDefaultImports": true
	},
}
